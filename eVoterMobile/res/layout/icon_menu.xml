<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="10dp" >

    <Button
        android:id="@+id/btNewSession"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New session" />

    <Button
        android:id="@+id/btSubjectUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Subject users" />

    <Button
        android:id="@+id/btStartSession"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start" />

    <Button
        android:id="@+id/btAcceptJoin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Join" />

    <Button
        android:id="@+id/btNewQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Question" />

    <Button
        android:id="@+id/btAcceptedUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Student joined" />

    <Button
        android:id="@+id/btStatitisticBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Student feedback" />

    <Button
        android:id="@+id/btLogout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logout" />

    <Button
        android:id="@+id/btExit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Exit" />

    <Button
        android:id="@+id/btMenuCancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel" />

</LinearLayout>