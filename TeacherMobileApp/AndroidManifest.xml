<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="evoter.mobile.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" 
        >
        <activity
            android:name="evoter.mobile.activities.StartActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="evoter.mobile.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="evoter.mobile.activities.SubjectActivity"
            android:screenOrientation="portrait"
            android:label="Subject" >
            <intent-filter>
                <action android:name="android.intent.action.SUBJECT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="evoter.mobile.activities.ResetPasswordActivity"
            android:screenOrientation="portrait"
            android:label="Recover Password" >
            <intent-filter>
                <action android:name="android.intent.action.RECOVERPASSWORD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="evoter.mobile.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:label="Register" >
            <intent-filter>
                <action android:name="android.intent.action.REGISTER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="evoter.mobile.activities.SessionActivity"
            android:screenOrientation="portrait"
            android:label="Session" >
            <intent-filter>
                <action android:name="android.intent.action.SESSION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="evoter.mobile.activities.QuestionActivity"
            android:screenOrientation="portrait"
            android:label="Session View" >
            <intent-filter>
                <action android:name="android.intent.action.SESSIONVIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="evoter.mobile.activities.QuestionDetailActivity"
            android:screenOrientation="portrait"
            android:label="Question detail" >
            <intent-filter>
                <action android:name="android.intent.action.QUESTIONDETAIL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>